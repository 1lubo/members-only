<% content_for :head do %>
     <link rel="stylesheet" href="/assets/sign-up.css"> 
     <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<% end %>
<div class="flash-messages"> <%= render 'layouts/error_messages' %> </div> 
<div class="body">
  <div class="container" id="container" >
    <div class="overlay-container">
        <div class="overlay">
          <div class="overlay-panel overlay-right">
            <h1>Sign-up Form</h1>
            
            <p>This sign-up form is created using pure HTML and CSS. For social icons,
        Fontawesome is used.</p>
        <div class="home-button"><%= link_to 'Home', root_path %></div>
          </div>        
        </div>
    </div>
  
    <div class="form-container log-in-container">
    
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                
        <h1>Sign Up</h1>
  
        <div class="field">
          
          <%= f.text_field :first_name, autofocus: true, required: true, placeholder: "First Name", input_html: { class:"input" }, wrapper: false, label_html: { class:"label" }, label: false %>
        </div>
  
        <div class="field">
          <%= f.text_field :last_name, placeholder: "Last Name" %>
        </div>
  
        <div class="field">
          <%= f.email_field :email, autocomplete: "email", placeholder: "Email" %>
        </div>
  
        <div class="field">
          <%= f.password_field :password, autocomplete: "new-password", placeholder: "Password" %>
        </div>
  
        <div class="field">
          <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Confirm Password" %>
        </div>
  
  
        <div class="actions">
          <%= f.submit "SIGN UP" %>
        </div>
        <div>
          <%= link_to 'I already have an account',  new_user_session_path %>
        </div>
      <% end %>
    </div>
  </div>
</div>
